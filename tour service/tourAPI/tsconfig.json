{
  "compilerOptions": {
    /* Projects */
    "incremental": true, // Uncomment if you want to speed up subsequent builds by saving incremental compilation information to a file
    "tsBuildInfoFile": "./.tsbuildinfo", // Use with incremental to specify the file location

    /* Language and Environment */
    "target": "es2016", // Target a modern version of JavaScript
    "module": "commonjs", // Use CommonJS for module system
    "lib": ["es2016"], // Specify the libraries to include in the compilation
    "experimentalDecorators": true, // Enable experimental decorators if you're using them
    "emitDecoratorMetadata": true, // Emit metadata for decorators if required

    /* Modules */
    "rootDir": ".", // Specify the root folder of your source files
    "outDir": "./dist", // Specify the output folder for compiled files
    "moduleResolution": "node", // Use Node.js module resolution strategy
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names

    /* JavaScript Support */
    "allowJs": true, // Allow JavaScript files to be a part of your project
    "checkJs": true, // Uncomment to enable type checking in JavaScript files

    /* Emit */
    "declaration": true, // Generate .d.ts files from TypeScript files
    "sourceMap": true, // Create source map files for debugging
    "removeComments": true, // Remove comments in the emitted JavaScript
    "importHelpers": true, // Use tslib helpers for optimized code

    /* Interop Constraints */
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true // Skip type checking of declaration files
  },
  "include": ["./**/*.ts"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
